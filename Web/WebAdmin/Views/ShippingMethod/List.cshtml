@using Com.Panduo.Service
@model PageData<Com.Panduo.Service.Order.ShippingOption.Shipping>
@{
    Layout = null;
}
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th width="6%">ID</th>
            <th>名称</th>
            <th width="7%">代码</th>
            <th width="6%">折扣</th>
            <th width="7%">燃油附加</th>
            <th width="7%">定额附加</th>
            <th width="7%">额外倍数</th>
            <th width="7%">考虑偏远</th>
            <th width="7%">考虑体积</th>
            <th width="7%">状态</th>
            <th width="10%">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shipping in Model.Data)
        {
            <tr>
                <td>
                    @shipping.ShippingId
                </td>
                <td>
                    <a href="@Url.Content("~/ShippingMethod/Edit/" + shipping.ShippingId)">@shipping.ShippingName</a>
                </td>
                <td>
                    @shipping.ShippingCode
                </td>
                <td>
                    @shipping.ShippingDiscount
                </td>
                <td>
                    @shipping.ExtraOil
                </td>
                <td>
                    @shipping.ExtraAmt
                </td>
                <td>
                    @shipping.ExtraTimes
                </td>
                <td>
                    @shipping.CalRemote
                </td>
                <td>
                    @shipping.CalVolume
                </td>

                @if (shipping.ShippingStatus)
                {
                    <td>
                        <button id="@shipping.ShippingId" onclick="change(@shipping.ShippingId)" class='btn btn-mini btn-success'>禁用</button>
                    </td>
                }
                else
                {
                    <td>
                        <button id="@shipping.ShippingId" onclick=" change(@shipping.ShippingId) " class='btn btn-mini btn-danger'>启用</button>
                    </td>
                }
                <td>
                    <a class="btn btn-mini btn-info" href="@Url.Content("~/ShippingMethod/Edit/" + shipping.ShippingId)"><i class="icon-edit icon-white"></i>编辑</a>
                    <a class="btn btn-mini btn-info" href="@Url.Content("~/ShippingMethod/Show/" + shipping.ShippingId)"><i class="icon-edit icon-white"></i>查看</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("~/Views/Shared/Partial/_Page_Bottom.cshtml", Model.Pager)
