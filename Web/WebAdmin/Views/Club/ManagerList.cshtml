@{
    Layout = null;
}
@using Com.Panduo.Service.Customer
@model Com.Panduo.Service.PageData<CustomerManager>

<input type="hidden" class="current_page" value="@Model.Pager.CurrentPage"/>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th style="width: 10%">ID</th>
            <th style="width: 10%">昵称</th>
            <th style="width: 15%">Email-For Club</th>
            <th style="width: 15%">联系电话</th>
            <th style="width: 15%">skype</th>
            <th style="width: 15%">潘朵邮箱</th>
            <th style="width: 20%">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customerManager in Model.Data)
        {
            <tr>
                <td>
                    @customerManager.CustomerManagerId
                </td>
                <td>
                    @customerManager.Name
                </td>
                <td>
                    @customerManager.ServiceEmail
                </td>
                <td>
                    @customerManager.Telphone
                </td>
                <td>
                    @(customerManager.Skype)
                </td>
                <td>
                    @customerManager.CompanyEmail
                </td>
                <td>
                    <a class="btn btn-mini btn-info btn-info-view-1" id="@customerManager.CustomerManagerId" data-id="@customerManager.CustomerManagerId" data-loading-text="<i class='icon-edit icon-white'></i> 加载">编辑</a>
                    <a class="btn btn-mini btn-info" onclick="deletemanager(@customerManager.CustomerManagerId)">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("~/Views/Shared/Partial/_Page_Bottom.cshtml", @Model.Pager)
