@{
    Layout = null;
}
@using Com.Panduo.Service.Customer
@model Com.Panduo.Service.PageData<ClubCustomerView>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th style="width: 5%">会员ID</th>
            <th style="width: 5%">客户ID</th>
            <th style="width: 13%">邮箱</th>
            <th style="width: 10%">会员年费</th>
            <th style="width: 7%">状态</th>
            <th style="width: 13%">付款时间</th>
            <th style="width: 10%">客服经理</th>
            <th style="width: 11%">付款状态</th>
            <th style="width: 11%">当前VIP等级</th>
            <th style="width: 15%">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clubCustomer in Model.Data)
        {
            <tr>
                <td>
                    @clubCustomer.ClubId
                </td>
                <td>
                    @clubCustomer.CustomerId
                </td>
                <td>
                    @clubCustomer.CustomerEmail
                </td>
                <td>
                    @clubCustomer.Fee
                </td>
                <td>
                    @(clubCustomer.ClubStatus)
                </td>
                <td>
                    @clubCustomer.BeginDate
                </td>
                <td>
                    @clubCustomer.ManagerName
                </td>
                <td>
                    @clubCustomer.PaymentStatus
                </td>
                <td>
                    @clubCustomer.CustomerLevel
                </td>
                <td>
                    @Html.Raw("<a class=\"btn btn-mini btn-primary\" href=\"/Club/ClubCustomerDetail/" + clubCustomer.ClubId + "?page=" + ViewBag.Page + "\">查看详情</a>")
                    <a class="btn btn-mini btn-info btn-info-view" id="@clubCustomer.ClubId" data-id="@clubCustomer.ClubId" data-loading-text="<i class='icon-edit icon-white'></i> 加载"><i class="icon-edit icon-white"></i>编辑</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("~/Views/Shared/Partial/_Page_Bottom.cshtml", @Model.Pager)


