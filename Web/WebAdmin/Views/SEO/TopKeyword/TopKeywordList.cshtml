@model Com.Panduo.Service.PageData<Com.Panduo.Service.SEO.TopKeyword>
@{
    Layout = null;
}

<table class="table table-striped table-bordered" data-delaction="/TopKeyword/DeleteTopKeyword">
    <thead>
        <tr>
            <th width="5%">
                <input name="select_rows" type="checkbox" /></th>
            <th width="35%">主题名</th>
            <th width="40%">关键词</th>
            <th width="20%">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.TopKeywordVos)
        {
            <tr>
                <td>
                    <input type="checkbox" name="row_sel" data-id="@item.TopKeyworId" /></td>
                <td class="ajax-pagination">
                    @item.TopKeywordSubjectName
                </td>
                <td>
                    @item.TopKeywordName
                </td>
                <td>
                    <a class="btn btn-mini btn-info btn-info-view" data-id="@item.TopKeyworId" data-loading-text="<i class='icon-edit icon-white'></i> 加载"><i class="icon-edit icon-white"></i>编辑</a>
                    <a class="btn btn-mini btn-danger btn-ajax-delete" data-id="@item.TopKeyworId"><i class="icon-trash icon-white"></i>删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("~/Views/Shared/Partial/_Page_Bottom.cshtml", @Model.Pager)