@model Com.Panduo.Service.PageData<Com.Panduo.Service.SEO.TopKeywordSubject>
@{
    Layout = null;
}

<table class="table table-striped table-bordered" data-delaction="/TopKeyword/DeleteSubject">
    <thead>
        <tr>
            <th width="5%">
                <input name="select_rows" type="checkbox" /></th>
            <th width="10%">Id</th>
            <th width="40%">主题名称</th>
            <th width="20%">语种</th>
            <th width="25%">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.TopKeywordSubjectVos)
        {
            <tr>
                <td>
                    <input type="checkbox" name="row_sel" data-id="@item.TopKeywordSubjectId" />
                </td>
                <td>
                    @item.TopKeywordSubjectId
                </td>
                <td>
                    @item.TopKeywordSubjectName
                </td>
                <td class="ajax-pagination">
                    @item.LanguageName
                </td>
                <td>
                    <a class="btn btn-mini btn-info btn-info-view" data-id="@item.TopKeywordSubjectId" data-loading-text="<i class='icon-edit icon-white'></i> 加载"><i class="icon-edit icon-white"></i>编辑</a>
                    <a class="btn btn-mini btn-danger btn-ajax-delete" data-id="@item.TopKeywordSubjectId"><i class="icon-trash icon-white"></i>删除主题</a>
                    <a class="btn btn-mini btn-primary" href="@Url.Content("/TopKeyword/TopKeyword?SubjectId=" + item.TopKeywordSubjectId)">关键词管理</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@Html.Partial("~/Views/Shared/Partial/_Page_Bottom.cshtml", @Model.Pager)