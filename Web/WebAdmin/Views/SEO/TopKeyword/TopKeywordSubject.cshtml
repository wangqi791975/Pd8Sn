@using Com.Panduo.Service
@{
    ViewBag.Title = "关键词主题列表";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
<div class="btn-group">
    <button data-toggle="dropdown" class="btn dropdown-toggle">批量操作 <span class="caret"></span></button>
    <ul class="dropdown-menu">
        <li><a href="javascript:void(0)" id="deleteBybatch"><i class="icon-trash"></i> 删除</a></li>
    </ul>
    <a class="btn" href="javascript:void(0)" data-toggle="modal" data-target=".ajax_show_add" data-backdrop="true"><i class="icon-edit"></i> 添加主题</a>
</div>
<div class="pull-right">
    <div class="pull-right">
        <form method="post" action="#" id="searchForm" name="searchForm" class="form-search">
            主题名称:
            <input id="txtTopKeywordSubjectName_search" type="text">
            <button class="btn" id="btnSearch"><i class="icon-search"></i> 搜索</button>
        </form>
    </div>
</div>
<div class="clearfix"></div>

<div id="main" class="ajax-list" data-url="@Url.Content("/TopKeyword/TopKeywordSubjectList")"></div>

<!-- detail -->
<div class="modal hide fade ajax_detail" data-url="@Url.Content("/TopKeyword/TopKeywordSubjectInfo")">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">&times;</a>
        <h3>编辑关键词主题</h3>
    </div>
    <div class="modal-body ajax_info">
    </div>
    <div class="modal-footer">
        <a href="javascript:void(0)" class="btn btn-primary ajax_update">保存</a>
        <a href="javascript:void(0)" class="btn" data-dismiss="modal">关闭</a>
    </div>
</div>

<div class="modal hide fade ajax_show_add" data-url="@Url.Content("/TopKeyword/TopKeywordSubjectInfo")">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">&times;</a>
        <h3>添加关键词主题</h3>
    </div>
    <div class="modal-body ajax_info">
    </div>
    <div class="modal-footer">
        <a href="javascript:void(0)" class="btn btn-primary ajax_add">保存</a>
        <a href="javascript:void(0)" class="btn" data-dismiss="modal">关闭</a>
    </div>
</div>
