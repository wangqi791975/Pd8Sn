@{
    Layout = null;
}
@using Com.Panduo.Service
@model PageData<Com.Panduo.Service.Product.ClubProduct.ClubProductView>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th style="width: 10%">商品编号</th>
            <th style="width: 55%">商品名称</th>
            <th style="width: 15%">商品图片</th>
            <th style="width: 10%">商品折扣</th>
            <th style="width: 10%">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clubProduct in Model.Data)
        {
            <tr>
                <td>
                    @clubProduct.ProductModel
                </td>
                <td>
                    @clubProduct.Name
                </td>
                <td>
                    <img src="@ImageHelper.GetImageUrl(clubProduct.Image, 80)" />
                </td>
                <td>
                    @((1 - clubProduct.Discount) * 100 + "%")
                </td>
                <td>
                    <a class="btn btn-mini btn-danger" onclick="deleteclubproduct(@clubProduct.ProductId)" data-id="@clubProduct.ProductId"><i class="icon-trash icon-white"></i>删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("~/Views/Shared/Partial/_Page_Bottom.cshtml", @Model.Pager)
