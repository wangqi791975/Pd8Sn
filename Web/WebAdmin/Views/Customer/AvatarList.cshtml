@model Com.Panduo.Service.PageData<Com.Panduo.Service.Customer.CustomerAvatar>
@{
    Layout = null;
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th width="10%">客户ID</th>
            <th width="25%">客户姓名</th>
            <th width="20%">客户邮箱</th>
            <th width="15%">状态</th>
            <th width="15%">提交时间</th>
            <th width="15%">详情</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in @Model.Data)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.FullName</td>
                <td>@customer.CustomerEmail</td>
                <td>@customer.AuditingStatus</td>
                <td>@customer.DateCreated</td>
                <td><a class="btn btn-mini btn-info btn-info-view" id="data-@customer.CustomerId" data-id="@customer.CustomerId" data-loading-text="<i class='icon-edit icon-white'></i> 加载"><i class="icon-edit icon-white"></i> 详情</a></td>

            </tr>
        }
    </tbody>
</table>

@Html.Partial("~/Views/Shared/Partial/_Page_Bottom.cshtml", @Model.Pager)
