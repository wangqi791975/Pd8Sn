@{
    Layout = null;
}
@model Com.Panduo.Service.PageData<Com.Panduo.Service.Customer.Product.CustomerProductView>

<table class="table table-striped table-bordered" data-delaction="/Customer/DeleteCustomerProduct">
    <thead>
        <tr>
            <th style="width: 5%">
                <input type="checkbox" data-toggle="checkall" id="productid" /></th>
            <th style="width: 10%">商品编号</th>
            <th style="width: 40%">商品名称</th>
            <th style="width: 25%">商品图片</th>
            <th style="width: 10%">商品单价（最高）</th>
            <th style="width: 10%">操作</th>
        </tr>
    </thead>
    <tbody>
        <input type="hidden" name="customerId" value="@ViewBag.CustomerId"/>
        @foreach (var customerproduct in Model.Data)
        {
            <tr>
                <td>
                    <input type="checkbox" data-toggle="checkthis" name="ids" value="@customerproduct.Id" id="productid_@customerproduct.ProductId" /></td>
                <td>
                    @customerproduct.ProductModel
                </td>
                <td>
                    @customerproduct.Name
                </td>
                <td>
                    <img src="@ImageHelper.GetImageUrl(customerproduct.Image, 80)" />
                </td>
                <td>
                    @customerproduct.ProfitRate
                </td>
                <td><a class="btn btn-mini btn-danger btn-ajax-delete" data-id="@customerproduct.Id"><i class="icon-trash icon-white"></i>删除</a></td>
            </tr>
        }
    </tbody>
</table>
