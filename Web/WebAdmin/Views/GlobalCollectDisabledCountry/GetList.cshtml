@model Com.Panduo.Service.PageData<Com.Panduo.Service.Payment.GlobalCollectDisabledCountry>
@{
    Layout = null;
}

<table class="table table-striped table-bordered" data-delaction="@Url.Content("~/GlobalCollectDisabledCountry/Delete")">
    <thead>
        <tr>
            <th width="30%">国家名称</th>
            <th width="30%">添加时间</th>
            <th width="20%">操作人</th>
            <th width="20%">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Data)
        {
            <tr>
                <td>@item.CountryName</td>
                <td>@item.DateCreated</td>
                <td>@item.AccountEmail</td>
                <td>
                    <a class="btn btn-mini btn-danger btn-ajax-delete" data-id="@item.CountryId"><i class="icon-trash icon-white"></i>删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("~/Views/Shared/Partial/_Page_Bottom.cshtml", @Model.Pager)