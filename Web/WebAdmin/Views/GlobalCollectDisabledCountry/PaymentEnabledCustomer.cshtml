@{
    ViewBag.Title = "允许" + ViewBag.PaymentName + "付款客户管理";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
<h2>允许 @ViewBag.PaymentName 付款客户管理</h2>
<div class="pull-left" style="height: 50px;">
    <a class="btn btn-info-add" href="javascript:void(0)" data-id="0">新建</a>
</div>
<div class="clearboth"></div>

<div id="main" class="ajax-list" data-url="@Url.Content("~/GlobalCollectDisabledCountry/PaymentEnabledCustomerList?paymentType=" + ViewBag.PaymentType)"></div>

<!-- detail -->
<div class="modal hide fade ajax_show_add" data-url="@Url.Content("~/GlobalCollectDisabledCountry/PaymentEnabledCustomerEdit?paymentType=" + ViewBag.PaymentType)">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">&times;</a>
        <h3>新建</h3>
    </div>
    <div class="modal-body ajax_info">
    </div>
    <div class="modal-footer">
        <a href="javascript:void(0)" class="btn btn-primary ajax_add">保存</a>
        <a href="javascript:void(0)" class="btn" data-dismiss="modal">关闭</a>
    </div>
</div>
