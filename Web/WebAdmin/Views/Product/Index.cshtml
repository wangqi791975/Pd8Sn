@using Com.Panduo.Service
@{
    ViewBag.Title = "产品管理";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

<div class="pull-right">
    <!-- search bar -->
    <div class="pull-right">
        <form method="post" action="@Url.Content("~/Product/GetList")" id="searchForm" name="searchForm" class="form-search">
            产品编号：<input type="text" onkeyup="$(this).val($(this).val().replace(/\//g,''));" placeholder="产品编号" name="keyword">
            <button type="submit" class="btn"><i class="icon-search"></i>搜索</button>
        </form>
    </div>
</div>
<div class="clearboth"></div>

<div id="main" class="ajax-list" data-url="@Url.Content("~/Product/GetList?page=" + ViewBag.Page)"></div>