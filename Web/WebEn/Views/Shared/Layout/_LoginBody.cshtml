@using Resources
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" dir="ltr" lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="~/Images/favicon.ico" type="image/x-icon" />
    <title>8seasons @ViewBag.Title</title>
    @Html.JsFor("base.js", "~/Js/jquery-1.8.3.min.js,~/Js/jquery.form.min.js", fileVersion: "1.7")
    @Html.JsFor("8seasons_login.js", "~/Js/Base/message.js,~/Js/Base/bootstrap.js,~/Js/Base/common.js,~/Js/Base/main.js,~/Js/Public/loginreg.js,~/Js/uploadify/jquery.uploadify.js", fileVersion: "2.15")
    @Html.CssFor("8seasons.css", new[] { "~/Css/global.css", "~/Css/layout.css", "~/Css/form.css", "~/Css/public.css", "~/Css/main.css", "~/Css/uploadify.css" }, fileVersion: "3.2")
    @if (IsSectionDefined("HtmlHead"))
    { 
        @RenderSection("HtmlHead", false)
    }
</head>
<body>
    @*头部开始*@
    <div id="short_header">
        <div class="wrap">
            <h1><a href="~/Home/Index" title="8seasons">@Lang.TipChineseJewelry</a></h1>
        </div>
    </div>
    @*头部结束*@

    @*主体内容*@
    @RenderBody()

    @*底部开始*@
    <div id="foot">
        @Html.Partial("~/Views/Shared/Partial/_Footer.cshtml")
    </div>
    @*底部结束*@
    @*弹窗开始*@
    @Html.Partial("~/Views/Shared/Partial/_Popup.cshtml")
    @*弹窗结束*@
    @*小耳朵开始*@
    @Html.Partial("~/Views/Shared/Partial/_ToolBar.cshtml")
    @*小耳朵结束*@
    @RenderSection("HtmlFooter", false)
</body>
</html>
