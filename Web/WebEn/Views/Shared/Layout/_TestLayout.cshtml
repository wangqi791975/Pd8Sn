<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    @Html.CssFor("base.css", "~/Css/base.css,~/Css/button.css", fileVersion: "1.1.5")
    @Html.JsFor("base.js", "~/Js/jquery-1.8.3.js,~/Js/jquery.unobtrusive-ajax.min.js,~/Js/jquery.validate.js,~/Js/jquery.validate.unobtrusive.min.js", fileVersion: "1.2")
    @Html.JsFor("8seasons.js", "~/Js/Base/message.js,~/Js/Base/common.js", fileVersion: "1.3")
    @if (IsSectionDefined("HtmlHead"))
    { 
        @RenderSection("HtmlHead", false)
    } 
</head>
<body>

    <div class="Content">
        @RenderBody()
    </div>

    @RenderSection("HtmlFooter", false)
</body>
</html>
