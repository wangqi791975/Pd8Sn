@using Com.Panduo.Service
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" content="">
    <title>@ViewBag.Title</title>
</head>
    @{
        var maillogo = ServiceFactory.MailService.GetMailLogoByLanguageId(ServiceFactory.ConfigureService.SiteLanguageId);
        
    }
<body>
    <table align="0" border="0" cellpadding="0" cellspacing="0" style="margin: 0 auto; background: #FFF;" width="670">
        <tr>
            <td valign="top">
                <table align="0" border="0" cellpadding="0" cellspacing="0" style="border: 1px solid #ccc;" width="670">
                    <tr>
                        <td>
                            <table width="670" border="0" cellpadding="0" cellspacing="0">
                                <tr>
                                    <td width="5"></td>
                                    <td align="left" style="border-bottom: 1px solid #ccc; padding: 10px 0 5px 0;"><a href="#">
                                        <img src="~/Images/news_logo1.png" alt="" border="0"/></a></td>
                                    <td width="5"></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    @if (!maillogo.IsNullOrEmpty())
                    {
                        <tr>
                            <td align="center" style="padding: 5px 0;"><a href="@(maillogo.LogoUrl.StartsWith("http://")?maillogo.LogoUrl:"#")">
                                <img src="@ImageHelper.GetMailLogoImageUrl(maillogo.LogoImage)" alt="@maillogo.LogoUrl" border="0"/></a></td>
                        </tr>
                    }
                    <tr>
                        <td valign="top" style="font-size: 12px; color: #333; font-family: Verdana,Arial; font-weight: normal; padding: 0 5px 0 8px; line-height: 18px;">
                            @RenderBody()
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td height="10"></td>
        </tr>
        <tr>
            <td width="670" style="text-align: center; font-size: 12px; color: #999; font-family: Verdana,Arial; font-weight: normal; padding: 10px; line-height: 20px; border: 1px solid #ccc;">&copy;2002-2015 Hangzhou Panduo Information technology Co., Ltd. China Wholesale Beads.<br />
                All rights reserved </td>
        </tr>
    </table>
</body>
</html>
