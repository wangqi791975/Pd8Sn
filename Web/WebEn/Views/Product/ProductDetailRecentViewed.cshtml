@{
    Layout = null;
}
@using Resources
@model IList<Com.Panduo.Service.Product.ProductInfo>
@if (Model.Count > 0) { 
<h2 class="font14">@Lang.TipRecentlyViewed</h2>
<ul>
        @foreach (var recentlyViewProduct in @Model)
        {
            @Html.Partial("~/Views/Product/Partial/__Product__Item__Grid__View.cshtml", recentlyViewProduct)
        }
    <div class="clearfix"></div>
</ul>
}