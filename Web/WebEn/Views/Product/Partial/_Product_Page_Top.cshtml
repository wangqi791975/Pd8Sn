@using Resources
@model Com.Panduo.Service.Pager
@{
    int beforePage = Model.CurrentPage - 1 > 0 ? Model.CurrentPage - 1 : 1; //前一页
    int afterPage = Model.CurrentPage + 1 < Model.PageCount ? Model.CurrentPage + 1 : Model.PageCount;//后一页
    var pagerParm = new PagerParm(Url, Model.TotalRowCount, Model.PageSize);
}
@* 顶部翻页开始 *@
<div class="page">
    <h3 class="lf">@Html.Raw(string.Format(Lang.TipItemsFound,Model.TotalRowCount,ViewBag.ZoneName))</h3>
    @if (Model.TotalRowCount > 0)
    {
        <div class="rt pagelist">
            @if (Model.CurrentPage > 1)
            {<a rel="nofollow" class="pagelist_rt" href="@pagerParm.GetPageUrl(beforePage)">&lt;</a> }
            @if (Model.CurrentPage < Model.PageCount)
            {<a rel="nofollow" class="pagelist_rt" href="@pagerParm.GetPageUrl(afterPage)" >&gt;</a>}
            @if (Model.PageCount > 1)
            {
                <span class="pagelist_jump">
                    <input type="tel" class="inputw35" value="" /><a rel="nofollow" id="jumppagetop" href="javascript:void(0)" data-href="@pagerParm.GetPageUrl()">@Lang.TipGO</a></span>
            }
        </div>
    }
</div>
@* 顶部翻页结束 *@
