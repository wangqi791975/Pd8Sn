@using Com.Panduo.Service.Product
@using Resources
@model IList<ProductInfo>
@if (Model.Count > 0)
    {
        <div class="recommend_cont">
            <h2 class="font14">@Lang.TipHotItems</h2>
            <ul>
                @for (int i = 0; i < Model.Count & i < 5; i++)
                {
                    @Html.Partial("~/Views/Product/Partial/__Product__Item__Grid__View.cshtml", Model[i])
                }
                <div class="clearfix"></div>
            </ul>
            <!--显示两行有线 -->
            <ul class="recommend_cont_havemore">
                @if (Model.Count >= 5)
                {
                    for (int i = 5; i < Model.Count; i++)
                    {
                        @Html.Partial("~/Views/Product/Partial/__Product__Item__Grid__View.cshtml", Model[i])
                    }
                }
            </ul>
            <div class="clearfix"></div>
        </div>
    }
