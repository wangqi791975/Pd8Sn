@using Resources
@model Com.Panduo.Service.Pager
@{
    int beforePage = Model.CurrentPage - 1 > 0 ? Model.CurrentPage - 1 : 1; //前一页
    int afterPage = Model.CurrentPage + 1 < Model.PageCount ? Model.CurrentPage + 1 : Model.PageCount;//后一页
    
}
@*底部翻页开始*@
@if (Model.TotalRowCount > 0 && Model.PageCount > 1)
{
    var pagerParm = new PagerParm(Url, Model.TotalRowCount, Model.PageSize);
    <div class="page">
        <div class="rt pagelist">
            @if (Model.CurrentPage > 1)
            {
                <a href="@pagerParm.GetPageUrl(beforePage)">&lt;</a>
            }
            @if (Model.PageCount <= 7)//小于7时全部显示
            {
                for (int j = 1; j <= @Model.PageCount; j++)
                {
                    if (Model.CurrentPage == j)
                    {<a rel="nofollow" href="@pagerParm.GetPageUrl(j)" class="current">@j</a>}
                    else
                    {<a rel="nofollow" href="@pagerParm.GetPageUrl(j)">@j</a>}
                }
            }
            else
            {
                if ((Model.CurrentPage + 3 < Model.PageCount) && (Model.CurrentPage - 3 > 1))
                {
                <a rel="nofollow" href="@pagerParm.GetPageUrl(1)">1</a><a class="ellipsis">...</a>
                <a rel="nofollow" href="@pagerParm.GetPageUrl(Model.CurrentPage - 2)">@(Model.CurrentPage - 2)</a>
                <a rel="nofollow" href="@pagerParm.GetPageUrl(Model.CurrentPage - 1)">@(Model.CurrentPage - 1)</a>
                <a rel="nofollow" href="@pagerParm.GetPageUrl(Model.CurrentPage)" class="current">@Model.CurrentPage </a>
                <a rel="nofollow" href="@pagerParm.GetPageUrl(Model.CurrentPage + 1)">@(Model.CurrentPage + 1)</a>
                <a rel="nofollow" href="@pagerParm.GetPageUrl(Model.CurrentPage + 2)">@(Model.CurrentPage + 2)</a>
                <a rel="nofollow" class="ellipsis">...</a>
                <a rel="nofollow" href="@pagerParm.GetPageUrl(Model.PageCount)">@Model.PageCount</a>
                }
                else if ((Model.CurrentPage + 3 >= Model.PageCount) && (Model.CurrentPage - 3 > 1))
                {
                <a rel="nofollow" href="@pagerParm.GetPageUrl(1)">1</a><a class="ellipsis">...</a>
                    for (int j = 5; j >= 0; j--)
                    {
                        if (Model.PageCount - j == Model.CurrentPage)
                        {
                <a rel="nofollow" href="@pagerParm.GetPageUrl(Model.PageCount - j)" class="current">@(Model.PageCount - j)</a>
                        }
                        else
                        {
                <a rel="nofollow" href="@pagerParm.GetPageUrl(Model.PageCount - j)">@(Model.PageCount - j)</a>
                        }

                    }
                }
                else
                {
                    for (int j = 1; j < 7; j++)
                    {

                        if (j == Model.CurrentPage)
                        {
                <a rel="nofollow" href="@pagerParm.GetPageUrl(j)" class="current">@j</a>
                        }
                        else
                        {
                <a rel="nofollow" href="@pagerParm.GetPageUrl(j)">@j</a>
                        }
                    }
                <a rel="nofollow" class="ellipsis">...</a>
                <a rel="nofollow" href="@pagerParm.GetPageUrl(Model.PageCount)">@Model.PageCount</a>
                }

            }
            @if (Model.CurrentPage < Model.PageCount)
            {
                <a rel="nofollow" class="pagelist_rt" href="@pagerParm.GetPageUrl(afterPage)">&gt;</a>
            }
            <span class="pagelist_jump">
                <input type="tel" class="inputw35" name="input_qty" /><a rel="nofollow" id="jumppagebottom" href="javascript:void(0)" data-href="@pagerParm.GetPageUrl()">@Lang.TipGO</a></span>
        </div>
    </div>
}
@* 底部翻页结束*@
